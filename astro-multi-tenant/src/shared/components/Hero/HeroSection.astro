---
export interface Props {
  hero: {
    title: string;
    subtitle: string;
    finalTitle: string;
    finalSubtitle: string;
    image: string;
  };
}

const { hero } = Astro.props;
---

<section class="min-h-screen flex items-center justify-center relative bg-gradient-to-br from-background to-surface py-20">
  <div class="container mx-auto px-6 text-center">
    <h1 class="text-6xl font-bold mb-4 text-text-primary animate-pulse">
      {hero.title}
    </h1>
    <p class="text-2xl text-text-secondary mb-8">
      {hero.subtitle}
    </p>
    
    <div class="mt-16">
      <img src={hero.image} alt="DarkFlows Dashboard" class="mx-auto rounded-lg shadow-2xl max-w-4xl w-full" />
    </div>
    
    <div class="mt-16">
      <h2 class="text-4xl font-bold mb-4 text-text-primary">{hero.finalTitle}</h2>
      <p class="text-xl text-text-secondary">{hero.finalSubtitle}</p>
    </div>
  </div>
</section>