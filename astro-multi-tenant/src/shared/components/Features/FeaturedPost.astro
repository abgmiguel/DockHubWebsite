---
export interface Props {
  featuredPosts?: Array<{
    _id: string;
    title: string;
    description: string;
    author?: {
      name?: string;
    };
    category?: string;
  }>;
  loading?: boolean;
  apiUrl?: string;
}

const { featuredPosts: propsPosts, loading: propsLoading = false, apiUrl } = Astro.props;

// If no posts provided as props, try to fetch them
let featuredPosts = propsPosts || [];
let loading = propsLoading;

if (!propsPosts && apiUrl) {
  try {
    const response = await fetch(`${apiUrl}/api/posts?category=Featured`);
    const data = await response.json();
    if (data.posts) {
      featuredPosts = data.posts.map((post) => ({
        ...post,
        category: post.category?.name || 'Uncategorized'
      }));
    }
    loading = false;
  } catch (error) {
    console.error('Error fetching featured posts:', error);
    loading = false;
  }
}
---

{loading ? (
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-surface animate-pulse h-64 rounded-lg"></div>
      <div class="bg-surface animate-pulse h-64 rounded-lg"></div>
    </div>
  </div>
) : featuredPosts.length > 0 ? (
  <div class="max-w-7xl mx-auto px-4 pt-16 pb-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-text-primary">Featured</h2>
      <a 
        href="/blog" 
        class="text-link hover:text-link-hover transition-colors"
      >
        More Posts â†’
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {featuredPosts.map((post) => (
        <a href={`/blog/${post._id}`} class="group">
          <article class="h-full bg-surface rounded-lg overflow-hidden p-6">
            <div class="flex flex-col h-full">
              <h2 class="text-2xl font-bold mb-2 text-text-primary group-hover:text-link transition-colors">
                {post.title}
              </h2>
              <p class="text-text-muted mb-4">
                {post.description}
              </p>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-surface flex items-center justify-center text-sm text-text-primary">
                  {post.author?.name?.[0]?.toUpperCase() || 'A'}
                </div>
                <div>
                  <div class="text-sm text-text-primary">
                    By {post.author?.name || 'Anonymous'}
                  </div>
                  <div class="text-sm text-text-muted">
                    {post.category}
                  </div>
                </div>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
) : null}