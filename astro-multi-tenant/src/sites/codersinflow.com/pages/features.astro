---
import Footer from '../../../shared/components/Footer/Footer.astro';
import DetailedFeatureCard from '../../../shared/components/Cards/DetailedFeatureCard.astro';
import detailedFeaturesData from '../data/detailed-features.json';
---


  <!-- Hero Section -->
  <div class="bg-surface">
    <div class="max-w-7xl mx-auto py-16 px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-text-primary mb-6">
        {detailedFeaturesData.hero.title}
      </h1>
      <p class="text-xl text-text-secondary max-w-3xl mx-auto">
        {detailedFeaturesData.hero.description}
      </p>
    </div>
  </div>
  
  <!-- Detailed Feature Cards -->
  {detailedFeaturesData.features.map((feature) => (
    <div id={feature.id}>
      <DetailedFeatureCard
        title={feature.title}
        description={feature.description}
        features={feature.features}
        gradient={feature.gradient}
        videoSrc={feature.videoSrc}
        youtubeUrl={feature.youtubeUrl}
        reverse={feature.reverse}
      />
    </div>
  ))}
  
  <!-- CTA Section -->
  <div class="bg-surface py-16">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl font-bold text-text-primary mb-6">{detailedFeaturesData.cta.title}</h2>
      <p class="text-xl text-text-secondary mb-8">{detailedFeaturesData.cta.description}</p>
      <a href={detailedFeaturesData.cta.buttonLink} class="inline-block px-8 py-3 bg-primary text-text-inverse font-semibold rounded-lg hover:bg-primary/90 transition-colors">
        {detailedFeaturesData.cta.buttonText}
      </a>
    </div>
  </div>
  
  <!-- Footer -->
  <Footer />
