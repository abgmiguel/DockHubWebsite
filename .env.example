# ============================================
# Multi-Tenant SSR Platform Configuration
# ============================================
# Copy this to .env and update with your settings

# ============================================
# Environment
# ============================================
NODE_ENV=development
# NODE_ENV=production
LOG_LEVEL=debug

# ============================================
# Application Ports (Development & Docker)
# ============================================
PORT=4321                    # Frontend SSR port
API_PORT=3001                # Backend API port
HMR_PORT=24678               # Hot Module Reload port
PUBLIC_API_URL=http://127.0.0.1:3001
PUBLIC_DEV_FRONTEND_PORT=4321
PUBLIC_DEV_API_PORT=3001
HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
# Development
MONGODB_URI=mongodb://localhost:27017/codersblog

# Production (Docker) - uncomment for production
# MONGODB_URI=mongodb://admin:prodpassword123@mongodb:27017/codersblog?authSource=admin
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=prodpassword123
# MONGO_INITDB_DATABASE=codersblog

# ============================================
# Security
# ============================================
JWT_SECRET=your-secret-key-change-this-in-production
CORS_ORIGIN=*
ALLOWED_DOMAINS=localhost,127.0.0.1,yourdomain.com

# ============================================
# Multi-tenant Configuration
# ============================================
SITES_CONFIG_PATH=./sites-config.json

# ============================================
# Upload Configuration
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760    # 10MB in bytes

# ============================================
# Deployment Configuration
# ============================================
# Server Connection
DEPLOY_SERVER=your-server.com
DEPLOY_USER=root
DEPLOY_PORT=22               # SSH port

# Docker Settings
DOCKER_REGISTRY=local           # Use "local" for no registry, or docker.io/yourusername
DOCKER_TAG=latest
DOCKER_IMAGE_NAME=multi-tenant-app    # Unique image name for this deployment
DOCKER_CONTAINER_NAME=multi-tenant-container  # Unique container name

# External Ports (what nginx/host exposes)
FRONTEND_PORT=80             # External port for frontend (maps to PORT)
BACKEND_PORT=3001            # External port for backend API

# Remote Server Paths
REMOTE_BASE_DIR=/var/www/docker
NGINX_CONFIG_DIR=/etc/nginx

# SSL Configuration
SSL_EMAIL=admin@yourdomain.com

# Backup Settings
BACKUP_ENABLED=true
BACKUP_DIR=/var/www/docker/backups


# ============================================
# Feature Flags
# ============================================
ENABLE_BLOG=true
ENABLE_DOCS=true
ENABLE_ANALYTICS=false

# ============================================
# Email Configuration (optional)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================
# External Services (optional)
# ============================================
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLIC_KEY=pk_test_...